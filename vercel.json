{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/learning/analytics",
      "destination": "/api/learning?endpoint=analytics"
    },
    {
      "source": "/api/learning/patterns",
      "destination": "/api/learning?endpoint=patterns"
    },
    {
      "source": "/api/learning/feedback",
      "destination": "/api/learning?endpoint=feedback"
    },
    {
      "source": "/api/learning/health",
      "destination": "/api/learning?endpoint=health"
    },
    {
      "source": "/api/proxy/learning/analytics",
      "destination": "/api/learning?endpoint=analytics"
    },
    {
      "source": "/api/proxy/learning/patterns",
      "destination": "/api/learning?endpoint=patterns"
    },
    {
      "source": "/api/proxy/learning/feedback",
      "destination": "/api/learning?endpoint=feedback"
    },
    {
      "source": "/api/proxy/learning/health",
      "destination": "/api/learning?endpoint=health"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods", 
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}