{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/login",
      "destination": "/api/auth?action=login"
    },
    {
      "source": "/api/auth/register", 
      "destination": "/api/auth?action=register"
    },
    {
      "source": "/api/ai/advanced-train",
      "destination": "/api/ai/training?type=advanced"
    },
    {
      "source": "/api/ai/train",
      "destination": "/api/ai/training?type=regular"
    },
    {
      "source": "/api/ai/brain-tools",
      "destination": "/api/ai/brain?type=tools"
    },
    {
      "source": "/api/ai/brain-memory",
      "destination": "/api/ai/brain?type=memory"
    },
    {
      "source": "/api/ai/brain-chat",
      "destination": "/api/ai/brain?type=chat"
    },
    {
      "source": "/api/ai/auto-learn(.*)",
      "destination": "/api/ai/learn$1"
    },
    {
      "source": "/api/data/training",
      "destination": "/api/data"
    },
    {
      "source": "/api/learning/analytics",
      "destination": "/api/learning?endpoint=analytics"
    },
    {
      "source": "/api/learning/patterns",
      "destination": "/api/learning?endpoint=patterns"
    },
    {
      "source": "/api/learning/feedback",
      "destination": "/api/learning?endpoint=feedback"
    },
    {
      "source": "/api/learning/health",
      "destination": "/api/learning?endpoint=health"
    },
    {
      "source": "/api/learning/learning(.*)",
      "destination": "/api/learning$1"
    },
    {
      "source": "/api/ai/auto-questions",
      "destination": "/api/ai/auto-questions"
    },
    {
      "source": "/api/ai/auto-scheduler",
      "destination": "/api/ai/auto-scheduler"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods", 
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}